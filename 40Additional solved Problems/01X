
number = int(input())

row = []

for cell in range(number):
    row.append(' ')

for i in range(number):
    row[i] = 'x'
    row[(len(row) - 1) - i] = 'x'
    if int(i)==0:
        print(''.join(row[0:(len(row)) - i:]))
    elif len(row) // int(i) == 1:
        print(''.join(row[0:i+1:]))
    else:
        print(''.join(row[0:(len(row)) - i:]))
    row[i] = ' '
    row[(len(row) - 1) - i] = ' '



